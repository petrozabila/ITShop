	<% if cookies[:cart].present? %>
<% cookies[:cart].split(',').each do |id| %>
			<%= Product.find(id).title %> <br/>
			<%= Product.find(id).price %> <br/>
			<p><%= link_to 'x', delete_from_cart_product_path(id), method: :delete, data: { confirm: 'Are you sure?' } %></p>

		
			<% end %>
			<% end %>
			<h5><%= link_to 'Clear cart', clear_cart_path%></h5>
			<%= button_to 'Order', new_order_path, method: :get %>
</div>
