<%= simple_form_for @product, :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :rubric_id %>
  <%= f.input :title, placeholder: 'title of the product' %>
  <%= f.input :description, placeholder: 'describe the product' %>
  <%= f.input :price, placeholder: 'actual price of the product' %>
  <% Rubric.all.each do |c| %>
    <%= check_box_tag 'rubric_ids[]', c.id %>
    <%= c.name %>
  <% end %>
  <%= f.file_field :image %>
  
  <%= f.submit 'Add a product' %>
<% end %>
